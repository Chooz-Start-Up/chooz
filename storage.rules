rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Restaurant images (banners, logos, item images)
    // ownerUid is embedded in the path so rules can verify ownership without a Firestore lookup.
    match /restaurants/{ownerUid}/{restaurantId}/{allPaths=**} {
      allow read: if true;
      allow create, update: if request.auth != null
        && request.auth.uid == ownerUid
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null
        && request.auth.uid == ownerUid;
    }
  }
}
